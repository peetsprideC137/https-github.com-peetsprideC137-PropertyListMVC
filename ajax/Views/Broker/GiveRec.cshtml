@model IEnumerable<ajax.Models.Recfrombrok>

@{
    ViewBag.Title = "GiveRec";
    Layout = "~/Views/Shared/_LayoutBroker.cshtml";
}
<style>
    th{
        color:white;
        background-color:black;
    }
    body{
        font-weight:bold;
    }
</style>
<h2>Recommendations</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
@if(Model.Count() >0)
{ 
<table class="table table-hover table-responsive table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfRooms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Maxamount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Minamount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.req1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.req2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.req3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustId)
        </th>
 
        <th>Operations</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfRooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Maxamount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Minamount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.req1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.req2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.req3)
        </td>
       
        <td>
            @Html.HiddenFor(modelItem => item.CustId)
        </td>
       
        <td class="btn btn-info">
           @Html.ActionLink("Property List", "listprop", new { idm=item.RecomendID}) 
           
        </td>
    </tr>
}

</table>
}
else
    {
<div style="width=100%; text-align:center; background-color:#808080; color:white;">No records found</div>
    }