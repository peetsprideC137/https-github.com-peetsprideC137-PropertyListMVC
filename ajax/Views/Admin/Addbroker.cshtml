@model ajax.Models.Broker

@{
   
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    body {
        color: snow;
    }

    .jumbotron {
        text-align: center;
        width: 50%;
        height: 100%;
        background-color: rgba(66, 3, 137, 0.31);
        margin-top: 7%;
       margin-left:100px;
       font-weight: 600;
    }
  
</style>
<h2>Add a new Broker</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="jumbotron">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="form-group" style="padding-right:220px;">
                    @Html.LabelFor(model => model.BrokerName, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.BrokerName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BrokerName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="padding-right:220px;">
                    @Html.LabelFor(model => model.Pswd, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Pswd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Pswd, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-6" style="padding-left:100px;">
                    <input type="submit" value="Create" class="btn btn-warning" />
                </div>
            </div>
        </div>
    </div>
        }

