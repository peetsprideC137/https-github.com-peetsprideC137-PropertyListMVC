@model IEnumerable<ajax.Models.Recfrombrok>

@{
    ViewBag.Title = "viewrecom";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<style>
    body {
    background-image: url('../images/login_bg.jpg');
    background-repeat: no-repeat;
    background-size: cover;
  
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
    th {
        background-color: black;
        color: white;
    }

    td {
        background-color: white;
        color: black;
    }
</style>

<center><h2>Recommendations</h2></center>
@if(Model.Count()>0)
{ 
<div id="nullvaluecheck">
    <table class="table table-responsive table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfRooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maxamount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Minamount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.req1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.req2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.req3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.propidone)
            </th>

           
            <th>
                @Html.DisplayNameFor(model => model.BrokId)
            </th>
            <th>Details</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfRooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Maxamount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Minamount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.req1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.req2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.req3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.propidone)
                </td>

         
                <td>
                    @Html.DisplayFor(modelItem => item.BrokId)
                </td>
                <td>

                    @Html.ActionLink("view prop", "locationview", new { id = item.propidone })

                </td>
            </tr>
        }

    </table>
</div>
}
      
else{
<div style="width=100%; text-align:center; background-color:#808080; color:white;">No records found</div>
}
